{
  "window.commandCenter": false,
  "window.zoomLevel": 4,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.panel.defaultLocation": "right",
  "files.autoSave": "off",
  "editor.formatOnSave": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.showExecutionMessage": false,

  // Git
  "workbench.editorAssociations.git-rebase-todo": "default",

  // Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "pylint.args": ["--errors-only"],
  "code-runner.executorMap.python": "python3",

  // C, C++
  "C_Cpp.clang_format_style": "{BasedOnStyle: Google, IndentWidth: 4}",
  "code-runner.executorMap.cpp": "cd $dir && g++ $fileName -o ./bin/$fileNameWithoutExt.out && ./bin/$fileNameWithoutExt.out",

  // Shell Scripts
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },

  // JSON
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
